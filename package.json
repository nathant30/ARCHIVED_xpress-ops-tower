{
  "name": "xpress-ops-tower",
  "version": "1.0.0",
  "description": "Real-time operations command center with XPRESS Design System integration",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "next dev -p 4000",
    "dev:xpui": "cd apps/xpress-ops-xpui && npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "xpress:check": "node scripts/xpress-check.js",
    "xpress:enforce": "node scripts/xpress-enforce.js",
    "test": "vitest run",
    "test:unit": "jest --testPathPattern='src/.*\\.test\\.(ts|tsx|js|jsx)$'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "test:emergency": "jest --testPathPattern='sosAlertProcessor|websocket' --verbose",
    "test:database-performance": "node __tests__/database/performance-tests.js",
    "test:e2e": "playwright test",
    "test:e2e:emergency": "playwright test __tests__/e2e/emergency-workflows.spec.ts",
    "test:load": "node __tests__/load/runLoadTests.js",
    "test:security": "node security/security-scanner.js",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:backup": "node scripts/db-backup.js",
    "prisma:seed": "tsx prisma/seed.ts",
    "monitoring:start": "node monitoring/metrics-dashboard.js",
    "monitoring:performance": "node monitoring/performance-monitor.js",
    "deploy:staging": "scripts/deploy.sh --environment staging",
    "deploy:production": "scripts/deploy.sh --environment production",
    "deploy:emergency": "scripts/deploy.sh --environment production --emergency",
    "rollback:production": "scripts/deploy.sh --environment production --rollback",
    "security:scan": "node security/security-scanner.js",
    "performance:monitor": "node monitoring/performance-monitor.js",
    "audit:security": "npm audit && node security/security-scanner.js",
    "audit:performance": "npm run test:load && npm run monitoring:performance",
    "perf:lighthouse": "lhci autorun",
    "perf:lighthouse:ci": "lhci autorun --upload.target=temporary-public-storage",
    "perf:lighthouse:dev": "node scripts/run-lighthouse-tests.js",
    "drift:check": "node ./scripts/drift-check.mjs",
    "drift:fix": "npm run drift:check && npm run spec:seed",
    "prepare": "husky",
    "spec:seed": "node ./scripts/spec-seed.mjs",
    "spec:stubify": "node ./scripts/openapi-stubify.mjs",
    "docs:bundle": "redoc-cli bundle docs/api/openapi.json -o docs/api/index.html",
    "contract:test": "prism proxy docs/api/openapi.json http://localhost:4000 --errors",
    "frontend:scan": "node ./scripts/frontend-api-scanner.mjs",
    "guard:fe-openapi": "node ./scripts/fe-openapi-guard.mjs",
    "stubs:generate": "node ./scripts/openapi-stubs-to-nextjs.mjs",
    "stubs:budget": "node ./scripts/stub-budget.mjs",
    "stubs:list": "cat audit/stub_list.txt || true",
    "sdk:types": "openapi-typescript docs/api/openapi.json -o src/sdk/api-types.gen.ts",
    "guard:public-openapi": "node ./scripts/public-openapi-guard.mjs",
    "guard:production": "npm run guard:public-openapi && npm run guard:drift && echo 'Production guards: OK'",
    "guard:drift": "node scripts/drift-check.mjs || true && node scripts/drift-filter.mjs && test ! -s audit/missing_in_docs.txt",
    "gate:production": "node ./scripts/production-gate.mjs",
    "harden:production": "node ./scripts/harden-for-production.mjs",
    "emergency:demote": "node ./scripts/emergency-breakers.mjs demote",
    "parked-guard": "./scripts/parked-guard.mjs",
    "demote-all-public": "node scripts/emergency-breakers.mjs demote-all",
    "promote-uat": "./scripts/promote-uat.mjs",
    "promote:uat": "RELEASE_STATE=uat node ./scripts/promote-uat.mjs",
    "guard:uat": "RELEASE_STATE=uat ./scripts/parked-guard.mjs",
    "guard:uat-cap": "node ./scripts/uat-cap-guard.mjs",
    "guard:staging": "RELEASE_STATE=staging ./scripts/parked-guard.mjs",
    "preflight:uat": "node ./scripts/uat-preflight.mjs && node ./scripts/uat-coverage.mjs && node ./scripts/uat-rate-limit-guard.mjs",
    "guard:uat-ratelimit": "node ./scripts/uat-rate-limit-guard.mjs",
    "smoke:uat": "UAT_BASE=http://localhost:4000 node ./scripts/uat-smoke.mjs",
    "mint:uat-jwt": "node ./scripts/mint-uat-jwt.mjs",
    "test:uat-idempotency": "node ./scripts/uat-replay.mjs",
    "test:uat-ratelimit": "node ./scripts/uat-ratelimit.mjs",
    "coverage:uat": "node ./scripts/uat-coverage.mjs",
    "smoke:uat-junit": "./scripts/uat-smoke-junit.sh",
    "cutover": "node ./scripts/cutover-checklist.mjs",
    "preflight:check": "echo 'Checking secrets...' && test -n \"$JWT_SECRET\" && test -n \"$DATABASE_URL\" && echo 'âœ… secrets OK' || echo 'âŒ MISSING SECRETS'; npm run -s gate:production && echo 'âœ… Gate passed'; comm -3 audit/code_routes_full.txt audit/spec_routes_full.txt | wc -l | awk '{print ($1 == 0 ? \"âœ… Zero ghost routes\" : \"âŒ Ghost routes: \" $1)}'; node -e 'const s=require(\"./docs/api/openapi.json\");let c=0;for(const p in s.paths)for(const m in s.paths[p]){if((s.paths[p][m][\"x-visibility\"]||\"internal\")===\"public\")c++}console.log($1 == 9 ? \"âœ… Public APIs: \" + c : \"âŒ Wrong count: \" + c, \"(expected: 9)\")' && echo 'ðŸŽ¯ Preflight complete'",
    "gen:tokens": "cd packages/ui-tokens && npm run build",
    "build:ui": "cd packages/ui && npm run build && cd ../ui-charts && npm run build",
    "storybook": "cd apps/storybook && npm run storybook",
    "build:storybook": "cd apps/storybook && npm run build-storybook",
    "codemod:xp": "cd packages/codemods/xp-ui-migrate && node bin/cli.js",
    "lint:tokens": "eslint --ext .tsx,.ts --config .eslintrc.tokens.json src/"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@googlemaps/markerclusterer": "^2.6.2",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sendgrid/mail": "^8.1.5",
    "@sentry/nextjs": "^10.10.0",
    "@tanstack/react-query": "^5.85.5",
    "@types/leaflet": "^1.9.20",
    "@types/nodemailer": "^7.0.1",
    "@types/speakeasy": "^2.0.10",
    "@types/twilio": "^3.19.2",
    "axios": "^1.7.2",
    "axios-retry": "^4.5.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fast-xml-parser": "^5.2.5",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.12",
    "h3-js": "^4.3.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.12.0",
    "react": "^19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.52.1",
    "react-leaflet": "^5.0.0",
    "recharts": "^2.12.7",
    "redis": "^4.7.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "speakeasy": "^2.0.0",
    "supercluster": "^8.0.1",
    "swr": "^2.3.6",
    "tailwind-merge": "^2.4.0",
    "twilio": "^5.8.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@stoplight/prism-cli": "^5.14.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.11.6",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^15.2.7",
    "node-fetch": "^3.3.2",
    "playwright": "^1.55.0",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "prisma": "^6.15.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.6",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "node scripts/xpress-check.js"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwindcss",
    "xpress-design-system",
    "operations-dashboard",
    "real-time"
  ]
}