{
  "openapi": "3.1.0",
  "info": {
    "title": "Xpress Platform API",
    "version": "1.0.0",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "https://api.xpress.local"
    }
  ],
  "components": {
    "schemas": {},
    "parameters": {},
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  },
  "paths": {
    "/api/v1/fraud/analyze": {
      "post": {
        "tags": [
          "Fraud"
        ],
        "summary": "Analyze a request and return a fraud risk score",
        "operationId": "fraudAnalyze",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "requestId": {
                    "type": "string"
                  },
                  "modalities": {
                    "type": "object",
                    "properties": {
                      "location": {
                        "type": "object",
                        "properties": {
                          "lat": {
                            "type": "number"
                          },
                          "lon": {
                            "type": "number"
                          },
                          "timestamp": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "lat",
                          "lon",
                          "timestamp"
                        ]
                      },
                      "transaction": {
                        "type": "object",
                        "properties": {
                          "amount": {
                            "type": "number"
                          },
                          "currency": {
                            "type": "string"
                          },
                          "method": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "amount",
                          "currency",
                          "method"
                        ]
                      }
                    }
                  }
                },
                "required": [
                  "requestId",
                  "modalities"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Fraud score",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "requestId": {
                      "type": "string"
                    },
                    "riskScore": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 1
                    },
                    "reasons": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "requestId",
                    "riskScore",
                    "reasons"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    },
                    "code": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "webhooks": {},
  "security": [
    {
      "ApiKeyAuth": []
    }
  ]
}