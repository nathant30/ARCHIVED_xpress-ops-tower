{
  "dashboard": {
    "id": null,
    "title": "Expansion Operations Dashboard",
    "tags": ["expansion", "security", "operations"],
    "style": "dark",
    "timezone": "UTC",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 39,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Region Request Volume",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(expansion_operations_total{action=\"create_region_request\"}[24h]))",
            "legendFormat": "Total Requests (24h)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 15}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Region Promotion Activity", 
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(expansion_operations_total{action=\"promote_region_stage\"}[24h]))",
            "legendFormat": "Promotions (24h)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 3},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Average Handover Time to Regional Manager",
        "type": "stat", 
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "avg(expansion_handover_duration_hours{target_role=\"regional_manager\"})",
            "legendFormat": "Avg Hours",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "h",
            "decimals": 1,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 48},
                {"color": "red", "value": 168}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "ðŸš¨ Security Violations Alert",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}, 
        "targets": [
          {
            "expr": "sum(increase(security_violations_total{role=\"expansion_manager\", violation_type=\"active_region_access\"}[1h]))",
            "legendFormat": "Active Region Violations",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "alert": {
          "name": "Expansion Manager Active Region Violation",
          "message": "ðŸš¨ SEV-2: expansion_manager attempted to access active/suspended region",
          "frequency": "1m",
          "conditions": [
            {
              "query": {"queryType": "A", "refId": "A"},
              "reducer": {"type": "last", "params": []},
              "evaluator": {"params": [0], "type": "gt"}
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "Expansion Operations Timeline",
        "type": "timeseries",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(expansion_operations_total{action=\"create_region_request\"}[5m]) * 300",
            "legendFormat": "Region Requests/5m",
            "refId": "A"
          },
          {
            "expr": "rate(expansion_operations_total{action=\"promote_region_stage\"}[5m]) * 300", 
            "legendFormat": "Promotions/5m",
            "refId": "B"
          },
          {
            "expr": "rate(expansion_operations_total{action=\"handover_to_regional_manager\"}[5m]) * 300",
            "legendFormat": "Handovers/5m", 
            "refId": "C"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ops",
            "min": 0
          }
        }
      },
      {
        "id": 6,
        "title": "Region State Distribution",
        "type": "piechart",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum by (region_state) (regions_by_state_total)",
            "legendFormat": "{{region_state}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "legend": {"displayMode": "list", "placement": "right"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "mappings": []
          }
        }
      },
      {
        "id": 7,
        "title": "Dual-Control Approval Workflow Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "sum by (workflow_type, approval_status) (dual_control_approvals_total)",
            "legendFormat": "{{workflow_type}} - {{approval_status}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"desc": true, "displayName": "Value"}]
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "workflow_type": "Workflow Type",
                "approval_status": "Status", 
                "Value": "Count"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Security Event Log - Expansion Manager",
        "type": "logs",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "{job=\"xpress-ops-tower\"} |= \"expansion_manager\" | json",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Expansion Manager Deployments",
          "enable": true,
          "iconColor": "blue",
          "query": "ALERTS{alertname=\"ExpansionManagerDeployment\"}",
          "textFormat": "Expansion Manager Role Updated"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "region",
          "type": "query",
          "query": "label_values(expansion_operations_total, region_id)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "expansion_user",
          "type": "query", 
          "query": "label_values(expansion_operations_total{role=\"expansion_manager\"}, user_id)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}