{
  "openapi": "3.0.3",
  "info": {
    "title": "Xpress Ops Tower API",
    "version": "1.0.0",
    "description": "Production API for Xpress Ops Tower - Real-time operations command center",
    "contact": {
      "name": "Xpress Ops Team",
