{
  "name": "xpress-ops-tower",
  "version": "1.0.0",
  "description": "Real-time operations command center with XPRESS Design System integration",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "gen:openapi": "ts-node openapi/generate.ts",
    "gen:permissions": "ts-node rbac/generate.ts",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "xpress:check": "node scripts/xpress-check.js",
    "xpress:enforce": "node scripts/xpress-enforce.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='src/.*\\.test\\.(ts|tsx|js|jsx)$'",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "test:emergency": "jest --testPathPattern='sosAlertProcessor|websocket' --verbose",
    "test:database-performance": "node __tests__/database/performance-tests.js",
    "test:e2e": "playwright test",
    "test:e2e:emergency": "playwright test __tests__/e2e/emergency-workflows.spec.ts",
    "test:load": "node __tests__/load/runLoadTests.js",
    "test:security": "node security/security-scanner.js",
    "test:vehicle": "jest --config=jest.vehicle-management.config.js",
    "test:vehicle:unit": "jest --config=jest.vehicle-management.config.js --selectProjects='Unit Tests'",
    "test:vehicle:integration": "jest --config=jest.vehicle-management.config.js --selectProjects='API Integration Tests' 'Telemetry Integration Tests'",
    "test:vehicle:components": "jest --config=jest.vehicle-management.config.js --selectProjects='Component Tests'",
    "test:vehicle:security": "jest --config=jest.vehicle-management.config.js --selectProjects='Security Tests'",
    "test:vehicle:performance": "jest --config=jest.vehicle-management.config.js --selectProjects='Performance Tests'",
    "test:vehicle:compliance": "jest --config=jest.vehicle-management.config.js --selectProjects='Philippines Compliance Tests'",
    "test:vehicle:watch": "jest --config=jest.vehicle-management.config.js --watch",
    "test:vehicle:coverage": "jest --config=jest.vehicle-management.config.js --coverage",
    "vehicle:ci-gate": "scripts/ci-vehicle-management-gate.sh",
    "vehicle:ci-gate:quick": "scripts/ci-vehicle-management-gate.sh --quick",
    "vehicle:ci-gate:security": "scripts/ci-vehicle-management-gate.sh --security-only",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:backup": "node scripts/db-backup.js",
    "monitoring:start": "node monitoring/metrics-dashboard.js",
    "monitoring:performance": "node monitoring/performance-monitor.js",
    "deploy:staging": "scripts/deploy.sh --environment staging",
    "deploy:production": "scripts/deploy.sh --environment production",
    "deploy:emergency": "scripts/deploy.sh --environment production --emergency",
    "rollback:production": "scripts/deploy.sh --environment production --rollback",
    "security:scan": "node security/security-scanner.js",
    "performance:monitor": "node monitoring/performance-monitor.js",
    "audit:security": "npm audit && node security/security-scanner.js",
    "audit:performance": "npm run test:load && npm run monitoring:performance",
    "prepare": "husky install",
    "lint:openapi": "spectral lint artifacts/openapi.json && redocly lint artifacts/openapi.json",
    "gen:events": "ts-node events/generate_asyncapi.ts",
    "gen:schema:pg": "node scripts/gen-pg-schema.js",
    "gen:schema": "node scripts/gen-schema.js"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@googlemaps/markerclusterer": "^2.6.2",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.13",
    "@react-google-maps/api": "^2.20.7",
    "@sendgrid/mail": "^8.1.5",
    "@tanstack/react-query": "^5.85.5",
    "@types/leaflet": "^1.9.20",
    "@types/nodemailer": "^7.0.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/speakeasy": "^2.0.10",
    "@types/twilio": "^3.19.2",
    "axios": "^1.7.2",
    "axios-retry": "^4.5.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.2.5",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.12",
    "h3-js": "^4.3.0",
    "ioredis": "^5.4.1",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.12.0",
    "react": "^19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.52.1",
    "react-leaflet": "^5.0.0",
    "react-syntax-highlighter": "^15.6.6",
    "recharts": "^2.12.7",
    "redis": "^4.7.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "speakeasy": "^2.0.0",
    "supercluster": "^8.0.1",
    "swr": "^2.3.6",
    "tailwind-merge": "^2.4.0",
    "twilio": "^5.8.0"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^6.4.0",
    "@redocly/cli": "^2.0.8",
    "@stoplight/spectral-cli": "^6.15.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.11.6",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/sqlite3": "^3.1.11",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "autoprefixer": "^10.4.19",
    "dredd": "^14.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "fast-glob": "^3.3.3",
    "globby": "^14.1.0",
    "husky": "^9.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "playwright": "^1.55.0",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.6",
    "ts-morph": "^26.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "zod": "^3.25.76"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "node scripts/xpress-check.js"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwindcss",
    "xpress-design-system",
    "operations-dashboard",
    "real-time"
  ]
}