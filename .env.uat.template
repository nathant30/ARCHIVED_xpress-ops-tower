# UAT Environment Template

# Rate Limiting & Middleware  
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=30000  # 30 seconds  
RATE_LIMIT_MAX=5
RELEASE_STATE=uat
DEBUG_MIDDLEWARE=true  # Show debug headers in UAT
IDEMPOTENCY_TTL_MS=900000  # 15 minutes

# Database
DATABASE_URL="postgresql://xpress_user:password@localhost:5432/xpress_uat?schema=public"

# JWT Configuration
JWT_SECRET="uat-secret-key"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server  
PORT=4000
NODE_ENV=development