# Production Environment Template
DATABASE_URL="postgresql://xpress_user:password@localhost:5432/xpress?schema=public"
POSTGRES_PASSWORD="your-secure-password-here"

# JWT Configuration  
JWT_SECRET="your-256-bit-secret-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS
ALLOWED_ORIGINS="https://your-app.com,https://app.your-domain.com"

# Rate Limiting & Middleware
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=30000  # 30 seconds
RATE_LIMIT_MAX=5
RELEASE_STATE=production
DEBUG_MIDDLEWARE=false
IDEMPOTENCY_TTL_MS=900000  # 15 minutes

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"
LOG_LEVEL="info"

# Server
PORT="4000"
NODE_ENV="production"